{
	"name": "web3dappbot",
	"version": "1.0.0",
	"private": true,
	"description": "a web3 probot dapp bot",
	"author": "<sam@freighttrust.com>",
	"license": "ISC",
	"repository": "https://github.com/freight-trust/web3dappbot.git",
	"homepage": "https://github.com/freight-trust/web3dappbot",
